@model List<GestaoProdutos.Models.Produto>
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" id="bootstrap-css">
<link href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css" rel="stylesheet" id="bootstrap-css">

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>

<div id="tabela" style="width:80%">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Ações</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Categoria</th>               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <i class="fas fa-edit" title="Editar Produto" style="cursor:pointer; color:blue; padding:3px"></i>
                        <i class="fas fa-trash" onclick="InativarUsuario(@item.id)" title="Remover Produto" style="cursor:pointer; color:red"></i>
                    </td>
                    <td>@item.descricao</td>
                    <td>@item.preco</td>
                    <td>@item.categoriaProduto.descricao</td>                    
                </tr>
            }
           
        </tbody>

    </table>
</div>


<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
